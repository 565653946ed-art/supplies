<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.supplies.repository.UserMapper">
<!--Userテーブルを扱うxml-->
<!--usernameでデータ選択-->
    <select id="findByUsername" resultType="com.example.supplies.entity.User">
        SELECT 
        id,
        username,
        password,
        role
       	FROM users
        WHERE username = #{username}
    </select>
<!-- 取得したユーザーデータを登録-->
    <insert id="insertUser" parameterType="com.example.supplies.entity.User">
    	INSERT INTO users (username,password,role)
    	VALUES (#{username},#{password},#{role})
    
    </insert>


</mapper>